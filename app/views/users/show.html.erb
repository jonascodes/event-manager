<h2>User: <%= @user.username %></h2>
<p><a href="/meetings/new">New Meeting</a>
<h4>Upcoming Events</h4>
<% if @upcoming_events.count > 0%>
    <table>
        <tr>
            <th>Event</th>
            <th>DateTime</th>
        </tr>

        <% @upcoming_events.each do |meeting| %>
            <tr>
                <td><a href="<%= meeting_path %>"><%= meeting.title %></a></td>
                <td><%= meeting.datetime %></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <p>No upcoming events</p> 
<% end %>
<br>
<h4>Past Events</h4>
<% if @past_events.count > 0%>
    <table>
        <tr>
            <th>Event</th>
            <th>DateTime</th>
        </tr>

        <% @past_events.each do |meeting| %>
            <tr>
                <td><a href="<%= meeting_path %>"><%= meeting.title %></a></td>
                <td><%= meeting.datetime %></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <p>No past events</p> 
<% end %>

